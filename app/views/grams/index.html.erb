<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
  <% @grams.each do |gram| %>
  <div class="card">
    <div class="handle text"><%= gram.user.email %></div>
    <%= image_tag gram.image, class: 'img-fluid' %>
    <p class="text">
      "<%= gram.message %>"
    </p>
     <div class="gram-actions float-right">
      <% if current_user && current_user == gram.user %>
        <%= link_to 'Edit', edit_gram_path(gram) %>
        <%= link_to 'Destroy', gram_path(gram), method: :delete, data: {confirm: 'Are you sure?'} %>
      <% end %>
    </div>
    <br class="clearfix" />
    <div class="comments well">
      <h3>Comments</h3>
      <% gram.comments.each do |comment| %>
          <div class="comment">
            <span class="comment_handle text">
              	> <%= comment.user.email %>
              -
            </span>
          <span class="bubble text"><%= comment.message %> </span>
          </div>
          <br/>
        <% end %>

        <br/>

      <h3>Add a comment</h3>
      <%= simple_form_for Comment.new, url: gram_comments_path(gram) do |f| %>
        <%= f.input :message %>
        <%= f.submit 'Add Comment', class: 'my-btn' %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
